---
import { formatDate } from "../utils/date-format";
import LinkCard from "./link-card.astro";

interface BlogCard {
  slug?: string;
  title?: string;
  date: Date;
  className?: string;
}

const { slug, title, date, className } = Astro.props as BlogCard;
---

<LinkCard link={"/blog/" + slug}>
  <p class="text-sm font-medium text-zinc-500">
    {formatDate(date)}
  </p>
  <p class="cursor-pointer text-base font-bold text-blue-700">
    {title}
  </p>
</LinkCard>
