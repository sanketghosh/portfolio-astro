---
// components
import MainHead from "./main-head.astro";

import "../styles/index.css";

// modules and others
import { SITE_META_DATA } from "../constants";

interface MainLayoutProps {
  title?: string;
  description?: string;
  isNav?: boolean;
}

const {
  title,
  description = SITE_META_DATA.description,
  isNav,
} = Astro.props as MainLayoutProps;
---

<html lang="en">
  <MainHead
    title={`${SITE_META_DATA.title} ${title && "|"}  ${title}`}
    description={description}
  />
  <body
    class="bg-zinc-900 text-zinc-100 selection:bg-zinc-100 selection:text-zinc-900"
  >
    <main class="mx-auto max-w-2xl px-6 py-6 md:px-8 lg:px-10">
      <slot />
    </main>
  </body>
</html>
