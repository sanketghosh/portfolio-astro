---
import LinkCard from "./link-card.astro";

const fake_project_data = [
  {
    project: "Chatify",
    desc: "Modern real-time messaging app.",
    link: "https://github.com/sanketghosh",
  },
  {
    project: "EcoTrack",
    desc: "Environmental impact tracker.",
    link: "https://github.com/sanketghosh",
  },
  {
    project: "HealthPal",
    desc: "Personal health care buddy.",
    link: "https://github.com/sanketghosh",
  },
  {
    project: "BudgetWiz",
    desc: "Personal budget tracker.",
    link: "https://github.com/sanketghosh",
  },
];
---

<section>
  <div class="grid grid-cols-1 gap-3 lg:grid-cols-2">
    {
      fake_project_data.map((item) => (
        <LinkCard link={item.link} target="_blank">
          <p class="font-marcellus cursor-pointer text-lg font-semibold lg:text-xl">
            {item.project}
          </p>
          <p class="text-zinc-500">{item.desc}</p>
        </LinkCard>
      ))
    }
  </div>
</section>
