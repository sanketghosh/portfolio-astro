---
// components
import MainHead from "./main-head.astro";

import "../styles/index.css";

// modules and others
import { SITE_META_DATA } from "../constants";
import Hero from "../components/hero.astro";

interface MainLayoutProps {
  title?: string;
  description?: string;
  isNav?: boolean;
}

const {
  title,
  description = SITE_META_DATA.description,
  isNav,
} = Astro.props as MainLayoutProps;
---

<html lang="en">
  <MainHead
    title={`${SITE_META_DATA.title} ${title && "|"}  ${title}`}
    description={description}
  />
  <body class="bg-zinc-50 text-black selection:bg-black selection:text-white">
    <main
      class="mx-auto max-w-3xl px-6 py-6 font-jetbrains_mono md:px-8 lg:px-10"
    >
      <slot />
    </main>
  </body>
</html>
