---

<section>
  <div class="space-y-3">
    {
      fake_project_data.map((item) => (
        <div class="border-b border-zinc-800 pb-2">
          <a
            href={item.link}
            target="_blank"
            class="cursor-pointer font-medium transition-all hover:text-zinc-300 hover:underline hover:underline-offset-4"
          >
            {item.project}
          </a>
          <p class="text-sm font-medium text-zinc-500">{item.desc}</p>
        </div>
      ))
    }
  </div>
</section>
