  {
    project: "Chatify",
    desc: "Real-time messaging app, with group chat, 1v1 chat and other features",
    link: "https://github.com/sanketghosh",
  },
  {
    project: "EcoTrack",
    desc: "An environmental impact tracker, very easy to use",
    link: "https://github.com/sanketghosh",
  },
  {
